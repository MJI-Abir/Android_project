<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/imageEditShimmer"
        android:layout_width="176dp"
        android:layout_height="143dp"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/shimmerColor"/>

    <TextView
        android:id="@+id/nameTextViewShimmer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="                                                    "
        android:layout_marginTop="@dimen/view_margin"
        android:background="@color/shimmerColor"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/imageEditShimmer"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/numberTextViewShimmer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="                                                    "
        android:layout_marginTop="@dimen/view_margin"
        android:textSize="24sp"
        android:background="@color/shimmerColor"
        app:layout_constraintTop_toBottomOf="@id/nameTextViewShimmer"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/emailTextViewShimmer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="                                                    "
        android:layout_marginTop="@dimen/view_margin"
        android:background="@color/shimmerColor"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/numberTextViewShimmer"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>